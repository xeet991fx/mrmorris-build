# Backend API URL (for API calls - without /api, that's added by the client)
NEXT_PUBLIC_API_URL=http://localhost:5000

# Backend URL (for tracking script - same as API URL usually)
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Frontend App URL (main app)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Frontend URL (for embeds, forms, landing pages - usually same as APP_URL)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Production values (uncomment and update for deployment):
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# NEXT_PUBLIC_BACKEND_URL=https://api.your-domain.com
# NEXT_PUBLIC_APP_URL=https://app.your-domain.com
# NEXT_PUBLIC_FRONTEND_URL=https://app.your-domain.com
