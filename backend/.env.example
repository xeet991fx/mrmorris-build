# Server Configuration
PORT=5000
NODE_ENV=development
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ======================
# Database Configuration
# ======================

# MongoDB URI - Required for all data storage including recordings
# Option 1: Local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/mrmorris
#
# Option 2: MongoDB Atlas (for production)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# ======================
# JWT Configuration
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ======================
# Email Configuration
# ======================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=YourAppName

# Resend (alternative email service)
RESEND_API_KEY=

# ======================
# Google OAuth & APIs
# ======================
# Required for Google Calendar, Google Meet, and Recordings
# Get credentials from: https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Service Account (for server-side API access)
# Base64 encoded service account JSON credentials
GOOGLE_CREDENTIALS_BASE64=

# ======================
# AI Services
# ======================
# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Tavily (web search)
TAVILY_API_KEY=

# ======================
# Third-Party Integrations
# ======================

# Apollo.io
APOLLO_API_KEY=
APOLLO_BASE_URL=https://api.apollo.io/v1

# LinkedIn Integration
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ======================
# Redis (optional, for caching/queues)
# ======================
# For remote Redis (e.g., Upstash)
# REDIS_URL=rediss://default:password@host:6379
#
# For local Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# ======================
# Monitoring (optional)
# ======================
SENTRY_DSN=
